    <!-- 通用查询映射结果 -->
    <resultMap id="ClubCardPayResultMap" type="ClubCardPaytype">
        <id column="id" property="id" />
        <result column="money" property="money" />
        <association column="clubcard_id" javaType="Clubcard" select="com.xieke.admin.mapper.ClubCardMapper.findById" property="clubcard" />
        <association column="paytype_id" javaType="Paytype" select="com.xieke.admin.mapper.PaytypeMapper.findById" property="paytype" />
    </resultMap>
    <insert id="insert" parameterType="ClubCardPaytype">
        INSERT INTO `jy_clubcard_paytype`
        (money,clubcard_id,paytype_id)
        VALUES (#{money},#{clubcard.id},#{paytype.id})
    </insert>
    <delete id="delByClubCardId">
        delete from `jy_clubcard_paytype` WHERE clubcard_id = #{id}
    </delete>
    <select id="findByClubCardId" resultMap="ClubCardPayResultMap">
        SELECT * FROM `jy_clubcard_paytype` where clubcard_id = #{id}
    </select>
